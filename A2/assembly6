        <script>
        var initial = 'LDR R0, 100\n' +
'AND R2, R0, #15\n' +
'CMP R2, #10\n' +
'BLT isnumber\n' +
'ADD R2, R2, #55\n' +
'B doleftdigit\n' +
'isnumber:\n' +
'ADD R2, R2, #48\n' +
'doleftdigit:\n' +
'AND R1, R0, #240\n' +
'LSR R1, R1, #4\n' +
'CMP R1, #10\n' +
'BLT isnumber2\n' +
'ADD R1, R1, #55\n' +
'B storetomemory\n' +
'isnumber2:\n' +
'ADD R1, R1, #48\n' +
'storetomemory:\n' +
'STR R1, 101\n' +
'STR R2, 102\n' +
'CMP R2, #16 #distractor\n' +
'STR R2, [102] #distractor\n'

            
        function displayErrors(fb) {
            if(fb.errors.length > 0) {
                alert(fb.errors[0]);
            }
        } 

        $(document).ready(function(){
            var parson = new ParsonsWidget({
                'sortableId': 'sortable',
                'trashId': 'sortableTrash',
                'max_wrong_lines': 2,
                'feedback_cb' : displayErrors
            });
            parson.init(initial);
            parson.shuffleLines();
            $("#newInstanceLink").click(function(event){
                event.preventDefault();
                parson.shuffleLines();
            });
            $("#feedbackLink").click(function(event){
                event.preventDefault();
                parson.getFeedback();
            });
        });
        </script>
